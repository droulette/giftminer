<div style='margin-top:5px;'>
  <ul class='breadcrumb'>
    <li>
      <%= link_to 'Home', root_path %>
      <span class='divider'>/</span>
    </li>
    <li>
      Payment Info
    </li>
  </ul>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="span3">
      <ul class="nav nav-list bs-docs-sidenav" style="margin:0">
        <li><a href="<%= edit_registration_path(resource_name) %>"><i class="icon-chevron-right"></i>Profile</a></li>
        <li class="active"><a href="<%= new_subscription_path %>"><i class="icon-chevron-right"></i>Payment Info</a></li>
        <li><a href="<%= orders_path %>"><i class="icon-chevron-right"></i>Order History</a></li>
      </ul>
    </div><!--/span-->
    <div class="span9 well">
      <h3>Credit Card on File</h3>
      <p>Last 4 digits of Credit Card: <%= @payment_info.active_card.last4 %></p>
      <p>Card Type: <%= @payment_info.active_card.type %></p>
      <p>Expiration: <%= @payment_info.active_card.exp_month %>/<%= @payment_info.active_card.exp_year %></p>
      <p>Account Balance: <%= @payment_info.account_balance %></p>
      
      <%= link_to 'Delete', @subscription, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %>

    </div>
  </div><!--/row-->
</div>