<div style='margin-top:5px;'>
  <ul class='breadcrumb'>
    <li>
      <%= link_to 'Home', root_path %>
      <span class='divider'>/</span>
    </li>
    <li>
      Occasions
    </li>
  </ul>
</div>

<div class='fright'>
  <%= link_to 'Add Occasion', new_occassion_path, :class => 'btn btn-primary'  %>
  <%= link_to "View as Calendar", home_dashboard_path, :class => 'btn btn-secondary' %>
</div>

<div class='clear'></div>
</br>

<table class='table table-bordered table-striped table-condensed'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date</th>
    <th>Price Range</th>
    <th>Type of Gift</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @occassions.each do |occassion| %>
  <tr>
    <td><%= link_to occassion.name, occassion_path(occassion) %></td>
    <td><%= occassion.description %></td>
    <td><%= occassion.date.strftime("%B %d, %Y") %></td>
    <td><%= occassion.price_range %></td>
    <td><%= occassion.type_of_gift %></td>
    <td><%= link_to 'Edit', edit_occassion_path(occassion) %></td>
    <td><%= link_to 'Delete', occassion, confirm: 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end if @occassions%>
</table>

<br />

