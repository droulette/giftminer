<h1>Listing occassions</h1>

<table class='table table-bordered table-striped table-condensed'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date</th>
    <th>Price range</th>
    <th>Type of gift</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @occassions.each do |occassion| %>
  <tr>
    <td><%= occassion.name %></td>
    <td><%= occassion.description %></td>
    <td><%= occassion.date %></td>
    <td><%= occassion.price_range %></td>
    <td><%= occassion.type_of_gift %></td>
    <td><%= link_to 'Show', occassion %></td>
    <td><%= link_to 'Edit', edit_occassion_path(occassion) %></td>
    <td><%= link_to 'Destroy', occassion, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

