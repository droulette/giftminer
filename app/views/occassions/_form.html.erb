<%= form_for(@occassion, :html => { :class => "form-horizontal"}) do |f| %>
<% if @occassion.errors.any? %>
<div class='alert alert-error' id="error_explanation">
  <h4><%= pluralize(@occassion.errors.count, "error") %> prohibited this occasion from being saved:</h4>

  <ul>
    <% @occassion.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :name %>
  </div>

</div>
<div class="field control-group">
  <%= f.label :description, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :description, :size => "30x5" %>
  </div>
</div>
<div class="field control-group">
  <%= f.label :date, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :date, :value => @occassion.date.to_s, :class => 'datepicker' %>
  </div>
</div>
<div class="field control-group">
  <%= f.label :price_range, :class => 'control-label' %>
  <div class='controls'>
    <%= f.select :price_range, options_for_select([["under $25", "under $25"], ["$25.01-$100", "$25.01-$100"], ["$100.01-$250", "$100.01-$250"], ["$250+", "$250+"]], @occassion.price_range) %>
  </div>
</div>
<div class="field control-group">
  <%= f.label :type_of_gift, :class => 'control-label' %>
  <div class='controls'>
    <%= f.select :type_of_gift, options_for_select([["Silly", "Silly"], ["Serious", "Serious"], ["Gamer", "Gamer"], ["Romantic", "Romantic"], ["Cool", "Cool"]], @occassion.type_of_gift) %>
  </div>
</div>
<div class ="field">
  <p  style='margin-left:100px;'>
    Category
    <% @ocats.each do |ocat| %>
    <%= check_box_tag 'occassion[ocat_ids][]', ocat.id, @occassion.ocat_ids.include?(ocat) %>
    <%= ocat.category %>
    <% end %>
  </p>
</div>
</br>
<div class="actions form-actions">
  <%= f.submit nil, :class => 'btn btn-danger' %>
</div>
<% end %>
