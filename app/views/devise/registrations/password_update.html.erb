<div style='margin-top:5px;'>
  <ul class='breadcrumb'>
    <li>
      <%= link_to 'Home', root_path %>
      <span class='divider'>/</span>
    </li>
    <li>
      Password Update
    </li>
  </ul>
</div>

<div class="container" style="margin-top: 20px">
  <div class="row-fluid">
    <div class="span3">
      <ul class="nav nav-list bs-docs-sidenav" style='margin:0px;'>
        <li class='active'>
          <a href="<%= edit_registration_path(resource_name) %>"><i class="icon-chevron-right"></i>Profile</a>
        </li>
        <li>
          <a href="<%= new_subscription_path %>">
          <i class="icon-chevron-right"></i>Payment Info</a>
        </li>
        <li>
          <a href="#"><i class="icon-chevron-right"></i>Link</a>
        </li>
        <li>
          <a href="#"><i class="icon-chevron-right"></i>Link</a>
        </li>
      </ul>
    </div><!--/span-->
    <div class="span9 well">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", :method => :put }) do |f| %>
      <% devise_error_messages! %>
        
        <legend>
          My Profile
        </legend>

        <div class="control-group">
          <%= f.label :password, :class => 'control-label' %>
          <div class='controls'>
            <%= f.password_field :password, :autocomplete => "off" %>
          </div>
        </div>

        <div class="control-group <%= resource.errors[:password].include?("doesn't match confirmation") ? 'error' : '' %>">
          <%= f.label :password_confirmation, :class => 'control-label' %>
          <div class='controls'>
            <%= f.password_field :password_confirmation, :autocomplete => "off" %>
            <span class='help-inline'><%= 'Please confirm password' if resource.errors[:password].include?("doesn't match confirmation") %></span>
          </div>
        </div>

        <div class='form-actions'>
          <%= f.submit "Update", :class => 'btn btn-danger' %>
        </div>
      <% end %>

    </div>
  </div><!--/row-->
</div>

