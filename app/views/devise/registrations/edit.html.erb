<div class='well'>
  <legend>
    My Profile
  </legend>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", :method => :put }) do |f| %>
  <%= devise_error_messages! %>
<%= debug(params[:password]) %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class='controls'>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class='controls'>
      <%= f.password_field :password, :id => 'inputError', :autocomplete => "off" %>
      <span class='help-inline'>(leave blank if you don't want to change it)</span>
    </div>
  </div>

  <div class="control-group <%= resource.errors[:password_confirmation].any? ? 'error' : '' %>">
    <%= f.label :password_confirmation, :class => 'control-label', :for => 'inputError' %>
    <div class='controls'>
      <%= f.password_field :password_confirmation, :autocomplete => "off", :id => 'inputError'   %>
      <span class='help-inline'><%= 'Entry does not match new password' if resource.errors[:password_confirmation].any? %></span>
    </div>
  </div>

  <div class="control-group  <%= resource.errors[:current_password].any? ? 'error' : 'warning' %>">
    <%= f.label :current_password, :class => 'control-label', :for => 'inputError' %>
    <div class='controls'>
      <%= f.password_field :current_password, :autocomplete => "off", :id => 'inputError'  %>
      <span class='help-inline'>(we need your current password to confirm your changes)</span>
    </div>

  </div>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :username %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class='controls'>
      <%= f.select :gender, options_for_select([["Male", "Male"], ["Female", "Female"]]) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :birthday, :class => 'control-label' %>
    <div class='controls'>
      <%= f.date_select :birthday, :order => [:day, :month, :year] %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :firstname, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :firstname %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lastname, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :lastname %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address_line_1, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :address_line_1 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address_line_2, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :address_line_2 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :city %>
    </div
  </div>
  </br>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :state %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :zip %>
    </div>
  </div>

  <div class='form-actions'>
    <%= f.submit "Update", :class => 'btn btn-danger' %>
  </div>
  <% end %>

  <p style="font-size:18px;font-family: 'Ubuntu', Tahoma, sans-serif;">Cancel my account</p>

  <p>
    Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.
  </p>

</div>
