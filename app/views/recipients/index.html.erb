<div style='margin-top:5px;'>
  <ul class='breadcrumb'>
    <li>
      <%= link_to 'Home', root_path %>
      <span class='divider'>/</span>
    </li>
    <li>
      Recipients
    </li>
  </ul>
</div>

<h1>My Circle of People</h1>


<table class='table table-bordered table-striped table-condensed'>
  <tr>
    <th>Name</th>
    <th>Age range</th>
    <th>Gender</th>
    <th>Relationship</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipients.each do |recipient| %>
  <tr>
    <td><%= link_to recipient.full_name, recipient_path(recipient) %></td>
    <td><%= recipient.age_range %></td>
    <td><%= recipient.gender %></td>
    <td><%= recipient.relationship %></td>
    <td><%= link_to 'Show', recipient %></td>
    <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
    <td><%= link_to 'Destroy', recipient, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

