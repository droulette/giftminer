<div class="container" id='background'>
    <div class='home'>
      <h1 style = 'color:white;'>giftminer</h1>
      <h4 style='color:white;'><em>we'll mine it and you'll gift it</em></h4></br>
      <div class = "steps">
      	<p> Step 1: Create an Occasion</p>
      	<%= image_tag 'notepad.png' %>
      </div>
      <div class = "steps">
      	<p>Step 2: Mine a Gift</p>
      	<%= image_tag 'Gift_Box.png' %>
      </div>
      <div class = "steps">
      	<p>Step 3: Profit</p>
      	<%= image_tag 'smile-big.png' %>
      </div>
	</div>
	<% if !user_signed_in? %> 
      <div class = "signup">
  	    <h4>Sign up</h4>
	    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	    <%= devise_error_messages! %>	
  	      <div><%= f.label :email %>
	        <%= f.email_field :email %>
	      </div>	
	      <div>
	        <%= f.label :password %>
	        <%= f.password_field :password %>
	      </div>	
	      <div>
	        <%= f.label :password_confirmation %>
	        <%= f.password_field :password_confirmation %>
	      </div>	
	      <div style='padding-top:0px;'>
	        <%= f.submit "Sign up", :class => 'signupbutton btn btn-primary' %>
	      </div>
	    <% end %>
	  </div>
	<% end %>
	
	<div class='clear'></div>
</div>


<div class='well' style='margin-top:150px height:250px;'>
	<h3>Newest Additions:</h3>
	<% @new_products.each do |new_product|%>
	  <%= link_to image_tag(new_product.pic.url(:thumb)), product_path(new_product.id), :alt => new_product.name %>
	<% end %>
	
	
</div>