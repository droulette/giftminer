  <% if @occassions.count ==0 %>
  <p>
    Please create an occasion
  </p>
  <% else %>
  <table class='table table-bordered table-striped table-condensed'>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Price Range</th>
      <th>Gifts to Mine for</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @occassions.each do |occassion| %>
    <tr>
      <td><%= link_to occassion.name, occassion_path(occassion) %></td>
      <td><%= occassion.description %></td>
      <td><%= occassion.date.strftime("%B %d, %Y") %></td>
      <td><%= occassion.price_range %></td>
      <td><%= occassion.type_of_gift %></td>
      <td><%= link_to 'Edit', edit_occassion_path(occassion) %></td>
      <td><%= link_to 'Delete', occassion, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %></td>
    </tr>
    <% end if @occassions%>
  </table>
  <% end %>

  <h4>Newest Additions:</h4>
  <div class='well' style='height:100px'>
    <% @new_products.each do |new_product| %>
    <div style='float:left;margin-right:10px;'>
      <%= link_to image_tag(new_product.pic.url(:thumb)), product_path(new_product.id) %></br>
    </div>
    <% end %>
