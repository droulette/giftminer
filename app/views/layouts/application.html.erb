<!DOCTYPE html>
<html>
  <head>
    <title>giftminer</title>
      <%= stylesheet_link_tag "application", :media => "all" %>
      <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
      <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='container' style='margin-top:5px;min-height:550px'>

      <div class='loginbar'>

        <% if user_signed_in? %>
          <div>
            <%= link_to current_user.email, edit_user_registration_path %>
            <%= link_to((image_tag avatar_url(current_user)),edit_user_registration_path) %> |
            <%= link_to "My Wish List", '#' %> |
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          </div>
        <% else %>
          <% if params['controller']=="devise/sessions" && params['action']== 'new' %>
            <%= link_to 'Sign Up', root_path %>
          <% else %>
            <div class='buttonlink'>
              <%= link_to "Sign in", new_user_session_path %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class='clear'></div>

      <div class="navbar" style='height:40px; margin-bottom:0px; border-radius: 30px 30px 30px 30px;'>
        <div class="navbar-inner">
          <a href="/" title="giftminer" class="brand">&hearts; giftminer</a>
          <ul class="nav">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Occasions<b class="caret"></b> </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to 'All Occasions', occassions_path %>
                  </li>
                  <li>
                    <%= link_to 'New Occasion', new_occassion_path %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li>
                <%= link_to 'About Us', about_us_path %>
              </li>
              <li>
                <%= link_to 'Contact Us', contact_us_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class='clear'></div>

      <% flash.each do |name, msg| %>
        <div class="<%= flash_class(name) %> fade in" style='margin-top:24px;'>
          <a href="#" data-dismiss="alert" class="close">Ã—</a>
          <%= msg %>
        </div>
      <% end %>

      <div >
        <%= yield %>
      </div>

      <div class='clear'></div>
    </div><!-- end container -->

    <div class='footer'>
      <div class="container">
        <div style="float:right">
          <small> <%= link_to 'About Us', about_us_path %> |
            <%= link_to 'Contact Us', contact_us_path %> |
            Copyright &copy; 2013 giftminer <small>
        </div>
        <div>
          <a href='#'><span class="label label-info">Home</span></a>
          <a href='#'><span class="label label-success">Facebook</span></a>
          <a href='#'><span class="label label-warning">Twitter</span></a>
          <a href='#'><span class="label label-important">Reddit</span></a>
        </div>
      </div>
    </div>
  </body>
</html>
